<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/subjectId"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="251dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="129dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="MST1"
                        app:layout_constraintEnd_toStartOf="@+id/textView14"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="129dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="52dp"
                        android:background="@drawable/corner"
                        android:ems="10"
                        android:gravity="center"
                        android:maxLength="5"
                        android:hint="MM: 20"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/editText6"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="129dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="52dp"
                        android:gravity="center"
                        android:text="MST2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="129dp"
                        android:layout_height="54dp"
                        android:layout_marginEnd="52dp"
                        android:background="@drawable/corner"
                        android:maxLength="5"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="MM: 20"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="129dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:text="Majors"
                        app:layout_constraintEnd_toStartOf="@+id/textView16"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText5" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="129dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="52dp"
                        android:gravity="center"
                        android:text="Extras"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText6" />

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="129dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="52dp"
                        android:background="@drawable/corner"
                        android:ems="10"
                        android:maxLength="5"
                        android:gravity="center"
                        android:hint="MM: 50"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/editText8"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="129dp"
                        android:layout_height="54dp"
                        android:layout_marginEnd="52dp"
                        android:background="@drawable/corner"
                        android:ems="10"
                        android:maxLength="5"
                        android:gravity="center"
                        android:hint="MM:10"
                        android:inputType="numberDecimal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circularProgressBar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="105dp"
                        android:layout_marginEnd="105dp"
                        app:cpb_background_progressbar_color="#b6bbd8"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.99"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="87dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="76dp"
                        android:gravity="center"
                        android:text="100%"
                        android:textSize="25dp"
                        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
                        app:layout_constraintTop_toTopOf="@+id/circularProgressBar" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Current Grade: "
                        android:paddingLeft="90dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:text=" S "
                        android:id="@+id/grade"
                        android:gravity="center"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Marks for next Grade: "
                        android:paddingLeft="50dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=" 0 "
                        android:maxLength="3"
                        android:id="@+id/nextGrade"
                        android:gravity="center"
                        android:textSize="25dp" />

                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:background="@color/buttonGreenColor"
                    android:layout_gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/buttonTextColor"
                    android:layout_marginBottom="30dp"
                    android:onClick="onclickSave"/>

            </LinearLayout>



        </ScrollView>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:background="@color/appBackground"
        app:headerLayout="@layout/header"
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigationbarmenu"/>

</androidx.drawerlayout.widget.DrawerLayout>